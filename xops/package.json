{
  "name": "xops",
  "version": "0.0.1",
  "private": true,
  "description": "Xops API",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "TS_NODE=true ts-node src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "debug-with-migrations": "yarn db:migrate && yarn nodemon",
    "debug": "./tools/nodemon.sh",
    "test": "jest --config=./jest.config.ts --ci --runInBand --detectOpenHandles --useStderr --detectLeaks",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./ormconfig.ts",
    "db:drop": "yan typeorm:cli schema:drop",
    "migration:generate": "typeorm migration:create -n",
    "db:create": "ts-node src/script/create-db.ts",
    "predb:migrate:dev": "ts-node src/script/create-schema.ts",
    "predb:migrate:prod": "node dist/script/create-schema.js",
    "db:migrate:dev": "yarn typeorm:cli migration:run -t=false",
    "db:migrate:prod": "yarn typeorm:cli migration:run -t=false",
    "db:revert": "yarn typeorm:cli migration:revert",
    "db:sync": "yarn typeorm:cli schema:sync && yarn db:migrate",
    "stop:stack": "yarn compose:down:soft",
    "restart:hard": "yarn compose:down && yarn compose:up",
    "restart:soft": "yarn compose:down:soft && yarn compose:up",
    "clean": "./tools/clean.sh && ./tools/cleanDocker.sh"
  },
  "author": "Razvan Moraru redcom@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-route-53": "^3.127.0",
    "@sentry/integrations": "^7.5.1",
    "@sentry/node": "^7.5.1",
    "@sentry/tracing": "^7.5.1",
    "axios": "^0.27.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "helmet": "^5.1.0",
    "minifaker": "^1.34.1",
    "nodemon": "^2.0.16",
    "octokit": "^2.0.4",
    "pg": "^8.7.3",
    "pino": "^8.1.0",
    "pino-http": "^8.1.1",
    "pino-pretty": "^8.1.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.2.41",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@types/superagent": "^4.1.15",
    "@types/validator": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.6.2",
    "superagent": "^8.0.0",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3"
  },
  "optionalDependencies": {}
}
